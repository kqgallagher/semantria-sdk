<configuration scan="true" scanPeriod="60 seconds">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level [%d] {%thread} %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.semantria" level="warn"/>
    <logger name="com.semantria.example" level="info"/>
    <logger name="com.semantria.utils" level="info"/>
    <logger name="com.semantria.auth" level="info"/>

    <root level="warn" >
        <appender-ref ref="console"/>
    </root>

</configuration>
